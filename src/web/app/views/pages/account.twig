{% extends "layouts/app-layout.twig" %}
{% block appcontent %}
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Mon compte</h1>
    </div>
    <div class="row">
        <div class="col-3">
            <div class="nav flex-column nav-pills" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                <a class="nav-link active" id="general-tab" data-toggle="pill" href="#general" role="tab" aria-controls="general" aria-selected="true">Paramètres du compte</a>
                <a class="nav-link" id="createItem-tab" data-toggle="pill" href="#createItem" role="tab" aria-controls="createItem" aria-selected="false">Profil public</a>
                <a class="nav-link" id="manageItems-tab" data-toggle="pill" href="#manageItems" role="tab" aria-controls="manageItems" aria-selected="false">Sécurité</a>
            </div>
        </div>
        <div class="col-9">
            <div class="tab-content" id="v-pills-tabContent">
                <div class="tab-pane fade show active" id="general" role="tabpanel">
                    <div class="card bg-light">
                        <div class="card-header">
                            Général
                        </div>
                        <div class="card-body">
                            <form method="POST" action="#">
                                <div class="form-group">
                                    <label for="inputTitle">Titre*</label>
                                    <input type="text" name="newTitle" class="form-control" id="inputTitle" value="">
                                </div>
                                <div class="form-group">
                                    <label for="inputDateExpi">Date d'expiration*</label>
                                    <input type="date" name="newDate" class="form-control" id="inputDateExpi" value="">
                                </div>
                                <div class="form-group">
                                    <label for="inputDesc0">Description</label>
                                    <textarea class="form-control" id="inputDesc0" rows="3" name="newDescription"></textarea>
                                </div>
                                <div class="form-group">
                                    <div class="custom-control custom-switch">
                                        <input type="checkbox" class="custom-control-input" id="public" name="public" checked>
                                        <label class="custom-control-label" for="public">Rendre la liste publique</label>
                                    </div>
                                </div>
                                Les champs marqués d'un astérisque sont obligatoires.
                                <button type="submit" class="btn btn-lg btn-primary float-right">Envoyer</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="createItem" role="tabpanel">
                    <div class="card bg-light">
                        <div class="card-header">
                            Ajouter un objet
                        </div>
                        <div class="card-body">
                            <form method="POST" action="#">
                                <div class="form-group">
                                    <label for="inputName">Nom de l'objet*</label>
                                    <input type="text" name="nom" class="form-control" id="inputName">
                                </div>
                                <div class="form-group">
                                    <label for="inputPrix">Prix*</label>
                                    <input type="number" step="0.01" min="0" name="prix" class="form-control" id="inputPrix">
                                </div>
                                <div class="form-group">
                                    <label for="inputLinkPicture"><abbr title="Nom d'un fichier présent dans le dossier /public/images ou lien direct">Image (?)</abbr></label>
                                    <input type="text" name="picture" class="form-control" id="inputLinkPicture">
                                </div>
                                <div class="form-group">
                                    <label for="inputUrl">Lien pour plus d'information</label>
                                    <input type="url" name="url" class="form-control" id="inputUrl">
                                </div>
                                <div class="form-group">
                                    <label for="inputDesc">Description</label>
                                    <textarea class="form-control" id="inputDesc" rows="3" name="descr"></textarea>
                                </div>
                                Les champs marqués d'un astérisque sont obligatoires.
                                <button type="submit" class="btn btn-lg btn-primary float-right">Envoyer</button>
                            </form>
                        </div>
                    </div>
                </div>
                <div class="tab-pane fade" id="manageItems" role="tabpanel">
                    <div class="card bg-light">
                        <div class="card-header">
                            Gérer les objets
                        </div>
                        <div class="card-body">
                            <form method="POST" action="#">
                                <div class="form-group">
                                    <label for="inputName">qsdfqsdf*</label>
                                    <input type="text" name="nom" class="form-control" id="inputName">
                                </div>
                                <div class="form-group">
                                    <label for="inputPrix">qsdffsqdqsfdqsfd*</label>
                                    <input type="number" step="0.01" min="0" name="prix" class="form-control" id="inputPrix">
                                </div>
                                <div class="form-group">
                                    <label for="inputLinkPicture"><abbr title="Nom d'un fichier présent dans le dossier /public/images ou lien direct">Image (?)</abbr></label>
                                    <input type="text" name="picture" class="form-control" id="inputLinkPicture">
                                </div>
                                <div class="form-group">
                                    <label for="inputUrl">qsdfqsfdqsdf pour plus d'information</label>
                                    <input type="url" name="url" class="form-control" id="inputUrl">
                                </div>
                                <div class="form-group">
                                    <label for="inputDesc">qsdf</label>
                                    <textarea class="form-control" id="inputDesc" rows="3" name="descr"></textarea>
                                </div>
                                Les champs marqués d'un astérisque sont obligatoires.
                                <button type="submit" class="btn btn-lg btn-primary float-right">Envoyer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
