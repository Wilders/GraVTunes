{% extends "layouts/body-layout.twig" %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ base_url() }}/public/assets/css/uac.css">
{% endblock %}

{% block scripts %}
    <script type="text/javascript" src="{{ base_url() }}/public/assets/js/uac.js"></script>
{% endblock %}

{% block content %}
    <section class="uac h-100">
        <div class="container h-100">
            <div class="row justify-content-md-center h-100">
                <div class="card-wrapper">
                    <div class="brand">
                        <img src="{{ base_url() }}/public/assets/media/images/logo.png" alt="logo">
                    </div>
                    <div class="card fat">
                        <div class="card-body">
                            <h4 class="card-title">Mot de passe oublié</h4>
                            <form method="POST" class="uac-validation" novalidate="">
                                <div class="form-group">
                                    <label for="id">Identifiant</label>
                                    <input id="id" type="text" class="form-control" name="id" required autofocus>
                                    <div class="invalid-feedback">
                                        Votre adresse e-mail est indispensable
                                    </div>
                                    <div class="form-text text-muted">
                                        En appuyant sur "Réinitialiser le mot de passe" nous vous enverront un e-mail à l'adresse associée au compte contenant un lien afin de réinitialiser votre mot de passe
                                    </div>
                                </div>

                                <div class="form-group m-0">
                                    <button type="submit" class="btn btn-primary btn-block">
                                        Réinitialiser le mot de passe
                                    </button>
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="footer">
                        Copyright &copy; 2020 &mdash; GraVTunes
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}