{% extends "layouts/app-layout.twig" %}

{% block appcontent %}

    {% include "layouts/flash.twig" %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Ajouter un titre</h6>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ path_for("addTrack") }}" enctype="multipart/form-data">
                <div class="form-group">
                    <label>Fichier *</label>
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="file" name="file" accept=".mp3, .wav, .avi" required autofocus>
                        <label for="file" class="custom-file-label" data-browse="Parcourir">Choisir un fichier...</label>
                    </div>
                </div>
                <div class="form-group">
                    <label for="title">Titre *</label>
                    <input id="title" type="text" class="form-control" name="title" required>
                </div>
                <div class="form-group">
                    <label for="descr">Description</label>
                    <textarea id="descr" type="text" class="form-control" name="descr" placeholder="Nom de l'album du titre, de son artiste ..."></textarea>
                </div>

                {{ csrf() | raw }}

                <hr>
                Les champs marqués d'un astérisque sont obligatoires.
                <button type="submit" class="btn btn-lg btn-primary float-right">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}