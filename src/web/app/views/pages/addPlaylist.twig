{% extends "layouts/app-layout.twig" %}

{% block appcontent %}

    {% include "layouts/flash.twig" %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Créer une playlist</h6>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ path_for("addPlaylist") }}">
                <div class="form-group">
                    <label for="name">Nom de la playlist *</label>
                    <input type="text" name="name" id="name" class="form-control" value="{{ oldData.name }}" required autofocus>
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <textarea class="form-control" id="description" rows="3" name="descr">{{ oldData.descr }}</textarea>
                </div>

                {{ csrf() | raw }}

                <hr>
                Les champs marqués d'un astérisque sont obligatoires.
                <button type="submit" class="btn btn-lg btn-primary float-right">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}