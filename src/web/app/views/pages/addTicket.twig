{% extends "layouts/app-layout.twig" %}

{% block appcontent %}

    {% include "layouts/flash.twig" %}

    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Créer un ticket</h6>
        </div>
        <div class="card-body">
            <form method="POST" action="{{ path_for("addTicket") }}">
                <div class="form-group">
                    <label for="objet">Objet *</label>
                    <input id="objet" type="text" class="form-control" name="objet" placeholder="Indiquez la raison" required>
                </div>
                <div class="form-group">
                    <label for="message">Message *</label>
                    <textarea id="message" type="text" class="form-control" name="message" placeholder="Expliquez clairement votre problème"></textarea>
                </div>

                {{ csrf() | raw }}

                <hr>
                Les champs marqués d'un astérisque sont obligatoires.
                <button type="submit" class="btn btn-lg btn-primary float-right">Envoyer</button>
            </form>
        </div>
    </div>
{% endblock %}